@inherits LayoutComponentBase

<SdWP.Frontend.Components.Pages.User.ChangePasswordModal/>

<Toasts class="p-3" @rendermode=InteractiveServer AutoHide="true" Delay="4000" Placement="ToastsPlacement.TopRight" />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a id="resetPasswordBtn">Forgot password?</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>